{
  "name": "svelte-tts-highlighter",
  "private": false,
  "version": "1.0.0",
  "description": "A lightweight, modular Svelte component for text-to-speech with synchronized word and paragraph highlighting.",
  "repository": {
    "type": "git",
    "url": "nwaughachukwuma/svelte-tts-highlighter",
    "directory": "https://github.com/nwaughachukwuma"
  },
  "author": "nwaughachukwuma<nwaughac@gmail.com>",
  "type": "module",
  "main": "./dist/svelte-tts-highlighter.umd.js",
  "module": "./dist/svelte-tts-highlighter.es.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/svelte-tts-highlighter.es.js",
      "require": "./dist/svelte-tts-highlighter.umd.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "highlighter",
    "text-to-speech",
    "svelte-tts-highlight",
    "svelte-tts-highlighter",
    "svelte-tts-highlighting"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.13.1",
    "svelte": "^5.15.0",
    "svelte-check": "^4.1.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0"
  }
}